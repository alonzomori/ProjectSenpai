<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login - ProjectSenpai</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@400;600;800&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    crossorigin="anonymous"
  />

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

  <!-- Your styles -->
  <link rel="stylesheet" href="./styles.css" />
</head>
<body>
  <!-- 背景装飾 -->
  <div class="bg-ornament bg-ornament--tl"></div>
  <div class="bg-ornament bg-ornament--tr"></div>
  <div class="bg-ornament bg-ornament--br"></div>

  <!-- Navbar -->
  <nav class="navbar navbar-light py-3">
    <div class="container d-flex justify-content-between align-items-center">
      <a class="navbar-brand d-flex align-items-center gap-2" href="index.html">
        <span class="logo-dot"></span>
        <span class="fw-bold">ProjectSenpai</span>
      </a>
    </div>
  </nav>

  <!-- Login Section -->
  <section class="py-6">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-5">
          <h1 class="display-6 fw-800 lh-tight mb-4 text-center">Login</h1>
          <form>
            <div class="mb-3">
              <label for="email" class="form-label">メールアドレス</label>
              <input type="email" class="form-control" id="email" placeholder="you@example.com" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">パスワード</label>
              <input type="password" class="form-control" id="password" placeholder="********" required>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="remember">
                <label for="remember" class="form-check-label">ログイン情報を記憶する</label>
              </div>
              <a href="#" class="small text-secondary">パスワードをお忘れですか？</a>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary px-4 py-2 fw-semibold">ログイン</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-5 border-top">
    <div class="container d-flex flex-column flex-sm-row align-items-center justify-content-between gap-3">
      <a href="contact.html" class="d-flex align-items-center gap-2 text-decoration-none">
        <span class="logo-dot"></span><span class="fw-bold">Contact us</span>
      </a>
      <small class="text-secondary">© 2025 ProjectSenpai. All rights reserved.</small>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"
  ></script>
</body>
</html>
