<div id="form_title">
  <%= simple_form_for [feature, message] do |f| %>
    <div class="d-flex flex-row justify-content-between mb-5">
      <%= f.input :content, label: false, wrapper_html: { style: "margin: 0 !important", class: "w-100"} %>
      <%= f.submit "Message", class: "btn btn-dark rounded-end-4" %>
    </div>
  <% end %>
</div>
