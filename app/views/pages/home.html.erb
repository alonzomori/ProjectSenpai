<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>AI App to support web project development</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@400;600;800&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    crossorigin="anonymous"
  />

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

  <!-- Your styles -->
  <link rel="stylesheet" href="./styles.css" />
</head>
<body>
  <!-- Background decoration） -->
  <div class="bg-ornament bg-ornament--tl"></div>
  <div class="bg-ornament bg-ornament--tr"></div>
  <div class="bg-ornament bg-ornament--br"></div>

  <!-- Navbar -->
  <nav class="navbar navbar-light py-3">
    <div class="container d-flex justify-content-between align-items-center">
      <a class="navbar-brand d-flex align-items-center gap-2" href="index.html">
        <span class="logo-dot"></span>
        <span class="fw-bold fs-3">ProjectSenpai</span>
      </a>
      <div class="login-action">
        <% if current_user %>
          <%= link_to "My Projects", projects_path, class:"btn btn-primary fw-semibold px-4 py-2" %>
        <% else %>
          <%= link_to "Log in", new_user_session_path, class: "btn btn-primary fw-semibold px-4 py-2"  %>
        <% end %>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <section class="position-relative overflow-hidden">
    <div class="container">
      <div class="row align-items-center gy-5">
        <!-- Text -->
        <div class="col-lg-6">
          <h1 class="display-5 fw-800 lh-tight mb-3">
            Start your Web Development with ProjectSenpai
          </h1>
          <p class="lead text-secondary mb-4">
            Empower your web project with AI-powered resources and conversation tools.
          </p>
        </div>
        <!-- Illustration (Card-style JPEG) -->
        <div class="col-lg-6 text-center hero-illustration">
          <div class="illustration-card">
            <img src="image/10221118.JPG" alt="Learning AI Communication illustration" class="img-fluid">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-6">
    <div class="container">
      <div class="row g-4">
        <div class="col-md-4">
          <div class="feature">
            <div class="feature-icon">
              <i class="bi bi-phone" aria-hidden="true"></i>
            </div>
            <h3 class="h5 fw-bold">Integrate features from past experience into your web development project</h3>
            <%# <p class="mb-0 text-secondary">xxxxxxxxxx</p> %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature">
            <div class="feature-icon">
              <i class="bi bi-lightning-charge" aria-hidden="true"></i>
            </div>
            <h3 class="h5 fw-bold">Connect with people who share common challenges</h3>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature">
            <div class="feature-icon">
              <i class="bi bi-palette" aria-hidden="true"></i>
            </div>
            <h3 class="h5 fw-bold">Leverage the power of AI to unlock a new world for your project</h3>
            <%# <p class="mb-0 text-secondary">xxxxxxxxxx</p> %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer（Contact us to contact.html -->
  <footer class="py-5 border-top">
    <div class="container d-flex flex-column flex-sm-row align-items-center justify-content-between gap-3">
      <a href="contact.html" class="d-flex align-items-center gap-2 text-decoration-none">
        <span class="logo-dot"></span><span class="fw-bold">Contact us</span>
      </a>
      <small class="text-secondary">© 2025 ProjectSenpai. All rights reserved.</small>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"
  ></script>
</body>
</html>
