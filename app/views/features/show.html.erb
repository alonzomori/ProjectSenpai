<div class="container">
  <h1><%= @feature.name %></h1>
  <div class="mt-3">
    <% @feature.messages.each do |message| %>
      <% if message.role == "user" %>
        <div class="d-flex justify-content-end mb-2">
          <div class="bg-dark text-white px-3 py-2 rounded-4">
            <%= message.content %>
          </div>
        </div>
      <% else %>
        <div class="d-flex justify-content-start mb-3">
          <div class="bg-white border border-dark px-3 py-2 rounded-4">
            <%= message.content %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <% if @feature.messages %>
    <h2>Ask another question</h2>
  <% else %>
    <h2>What do you need help with?</h2>
  <% end %>
  <%= simple_form_for [@feature, @message] do |f| %>
    <div class="d-flex flex-row justify-content-between gap-3">
      <div class="flex-fill">
        <%= f.input :content, label: false %>
      </div>
      <%= f.submit "Message", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
