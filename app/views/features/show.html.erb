<div class="container">
  <h1><%= @feature.name %></h1>
  <div id="messages" class="mt-3">
    <%= render "messages/messages", messages: @feature.messages.order(:created_at) %>
  </div>
  <% if @feature.messages.any? %>
    <h2>Ask another question</h2>
  <% else %>
    <h2>What do you need help with?</h2>
  <% end %>
  <div id="new_messsage">
    <%= render "messages/form", feature: @feature, message: @message %>
  </div>
</div>
